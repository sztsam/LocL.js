{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "noEmit": false,
    "moduleResolution": "nodenext"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}